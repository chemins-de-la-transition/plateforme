{% extends "@bazar/layouts/input.twig" %}

{% block input %}
    <div class="bazar-radio">
        {% for key, option in options %}
        <div class="radio">
            <label for="{{ field.propertyName ~ key }}">
                <input 
                    type="radio" 
                    id="{{ field.propertyName ~ key }}" 
                    value="{{ key }}" 
                    name="{{ field.propertyName }}" 
                    {% if value == key %}checked{% endif %} 
                    {%- if idForOption %} onclick="$('#{{idForOption}}>option[value={{key}}]').prop('selected',true);"{% endif %} />
                <span>{{ option|raw }}</span>
            </label>
        </div>
        {% endfor %}
    </div>
{% endblock %}
